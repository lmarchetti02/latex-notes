\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{latexnotes}[2025/02/26 Physics-oriented template for note taking]

% Language support
\RequirePackage[english]{babel}

% Font and encoding
\usepackage[sc]{mathpazo}
\usepackage[utf8]{inputenc}
\usepackage[T1]{fontenc}
\usepackage{microtype}
\linespread{1.05}

% Page margins and layout
\RequirePackage[a4paper, margin=1in]{geometry}
\RequirePackage{parskip}

% Load all component packages
\RequirePackage{layout}
\RequirePackage{formulas}
\RequirePackage{theorems}
\RequirePackage{title}

% Customize links
\RequirePackage[breaklinks=true]{hyperref}
\hypersetup{
	colorlinks=true,
	linkcolor=black,
	filecolor=magenta,
	urlcolor=black
}

% Images
\RequirePackage{graphicx}
\graphicspath{{img/}}

% Spacing for equations
\setlength{\abovedisplayskip}{6pt}
\setlength{\belowdisplayskip}{6pt}

\endinput
